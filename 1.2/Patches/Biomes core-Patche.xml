      <success>Always</success>
      <operations>
        <li Class="PatchOperationAdd">
          <xpath>Defs/TerrainDef[defName = "BiomesCore_WaterShallowLagoon"]/affordances</xpath>
          <value>
            <li>Fishable</li>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>